<openerp>
<data>
<template id="report_service_contract_document">

        <t t-call="report.external_layout">
        <t t-set="doc" t-value="doc.with_context({'lang':doc.registration_id.partner_id.lang})" />
        <div class="page">
            <div class="oe_structure"/>
                <table border="1" cellpadding="0" cellspacing="0"  style="border:1px solid black;" >
    <tbody>
        <tr  style="border:0.5px solid black;" >
            <td colspan="4" style="width:568px;border:1px solid black;">
            <h3 align="center">  <strong>  Contract</strong>  </h3>
            </td>
        </tr>
        <tr  style="border:0.5px solid black;" >
            <td colspan="4" style="width:568px;border:0.5px solid black;">
            <p style="font-size:12px;line-height:12px ">  <strong>  Two Parties</strong>  </p>
            </td>
        </tr>
        <tr  style="border:0.5px solid black;" >
            <td style="width:83px;border:0.5px solid black;">
            <p style="font-size:12px;line-height:12px ">  <strong>  AbbVie</strong>  </p>
            </td>
            <td colspan="3" style="width:485px;border:0.5px solid black;">
            <p style="font-size:12px;line-height:12px ">  AbbVie (Shanghai)Co.,Ltd.</p>
            </td>
        </tr>
        <tr  style="border:0.5px solid black;" >
            <td style="width:83px;border:0.5px solid black;">
            <p style="font-size:12px;line-height:12px ">  <strong>  Service Provider</strong>  </p>

            <p style="font-size:12px;line-height:12px ">  </p>
            </td>
            <td colspan="3" style="width:485px;border:0.5px solid black;">
            <p style="font-size:12px;line-height:12px ">  Name and Position: <span t-field="doc.registration_id.partner_id.function"/>    </p>

            <p style="font-size:12px;line-height:12px ">  Identity ID: <span t-field="doc.identifier_id"/>   </p>

            <p style="font-size:12px;line-height:12px ">  Bank Account: <span t-field="doc.bank_account"/>   </p>

            <p style="font-size:12px;line-height:12px ">  Institute: <span t-field="doc.registration_id.partner_id.parent_name"/>   </p>

            <p style="font-size:12px;line-height:12px ">  Address:<span t-field="doc.registration_id.partner_id.parent_id.contact_address"/>   </p>
            </td>
        </tr>
        <tr  style="border:1px solid black;" >
            <td colspan="4" style="width:568px;">
            <p style="font-size:12px;line-height:12px ">  <strong>  Details</strong>  </p>
            </td>
        </tr>
        <tr  style="border:0.5px solid black;" >
            <td style="width:83px;height:253px;border:0.5px solid black;">
            <p style="font-size:12px;line-height:12px ">  <strong>  Service</strong>  </p>

            <p style="font-size:12px;line-height:12px ">  </p>
            </td>
            <td colspan="3" style="width:485px;height:253px;border:0.5px solid black;">
            <p style="font-size:12px;line-height:12px ">  Service Description:</p>

            <p style="font-size:12px;line-height:12px ">   <span t-field="doc.event_id.name"/>   in  <span t-field="doc.event_id.address_id.name"/>    </p>

            <p style="font-size:12px;line-height:12px ">  </p>

            <p style="font-size:12px;line-height:12px ">  Event Detail: （Pls provide the info below or input as "N/A" ）</p>

            <p style="font-size:12px;line-height:12px ">  Event Name: <span t-field="doc.event_id.name"/>  </p>

            <p style="font-size:12px;line-height:12px ">  Event Venue: <span t-field="doc.event_id.venue"/>  </p>

            <p style="font-size:12px;line-height:12px ">  Event Schedule: <span t-field="doc.event_id.date_begin"  t-field-options='{"format": "yyyy/MM/dd HH:mm"}' />  ~ <span t-field="doc.event_id.date_end"  t-field-options='{"format": "yyyy/MM/dd HH:mm"}' />  </p>

            <p style="font-size:12px;line-height:12px ">  Organizer: <span t-field="doc.event_id.organizer"/>   </p>

            <p style="font-size:12px;line-height:12px ">  Audience:   <t t-foreach="doc.event_id.departments" t-as="l" > <span t-field="l.name"/>,  </t></p>

            <p style="font-size:12px;line-height:12px ">  Planned Event duration: <span t-field="doc.event_id.date_begin"  t-field-options='{"format": "yyyy/MM/dd HH:mm"}' />  ~ <span t-field="doc.event_id.date_end"  t-field-options='{"format": "yyyy/MM/dd HH:mm"}' />  </p>   <p style="font-size:12px;line-height:12px ">  Planned Service duration: <span t-field="doc.duration"/>  Hours</p>
 <p style="font-size:12px;line-height:12px ">  Service deliverables: </p>
            <t t-foreach="doc.event_track_contract" t-as="l" >

            <p style="font-size:12px;line-height:12px ">   <span t-field="l.serivce_deliverable"/>   </p>
        </t>
            </td>
        </tr>
        <tr  style="border:0.5px solid black;" >
            <td style="width:83px;border:0.5px solid black;">
            <p style="font-size:12px;line-height:12px ">  <strong>  Reasonable Requirements</strong>  </p>
            </td>
            <td colspan="3" style="width:485px;border:0.5px solid black;">
 <t t-foreach="doc.event_track_contract" t-as="l" >

            <p style="font-size:12px;line-height:12px ">  <span t-field="l.resonable_requirement"/>  </p>
        </t>
            </td>
        </tr>
        <tr  style="border:0.5px solid black;" >
            <td style="width:83px;border:0.5px solid black;">
            <p style="font-size:12px;line-height:12px ">  <strong>  AbbVie Contact</strong>  </p>
            </td>
            <td colspan="3" style="width:485px;border:0.5px solid black;">
            <p style="font-size:12px;line-height:12px ">  <span t-field="doc.event_id.user_id.name"/>    <span t-field="doc.event_id.user_id.mobile"/>    </p>
            </td>
        </tr>
        <tr  style="border:0.5px solid black;" >
            <td style="width:83px;border:0.5px solid black;">
            <p style="font-size:12px;line-height:12px ">  <strong>  Service Amount</strong>  </p>
            </td>
            <td colspan="3" style="width:485px;border:0.5px solid black;">
                <t t-set="test_variable" t-value="0"/>
            <t t-foreach="doc.event_track_contract" t-as="l" >
                 <t t-set="test_variable" t-value="test_variable+ l.service_fee "/>
            </t>
            <p style="font-size:12px;line-height:12px ">  RMB <t t-esc="test_variable"/>   </p>

            </td>
        </tr>
        <tr  style="border:1px solid black;" >
            <td colspan="4" style="width:568px;border:0.5px solid black;">
            <p style="font-size:12px;line-height:12px ">  <strong>  Date and Deadline</strong>  </p>
            </td>
        </tr>
        <tr  style="border:0.5px solid black;" >
            <td style="width:83px;border:0.5px solid black;">
            <p style="font-size:12px;line-height:12px ">  <strong>  Effective Date</strong>  </p>
            </td>
            <td colspan="3" style="width:485px;border:0.5px solid black;">
            <p style="font-size:12px;line-height:12px ">  The signing date</p>
            </td>
        </tr>
        <tr  style="border:0.5px solid black;" >
            <td style="width:83px;border:0.5px solid black;">
            <p style="font-size:12px;line-height:12px ">  <strong>  Deadline</strong>  </p>
            </td>
            <td colspan="3" style="width:485px;border:0.5px solid black;">
            <p style="font-size:12px;line-height:12px ">  Effective on Effective date, terminated on <span t-field="doc.event_id.date_end" t-field-options='{"format": "yyyy/MM/dd"}'/>   .</p>
            </td>
        </tr>
        <tr  style="border:0.5px solid black;" >
            <td colspan="4" style="width:568px;border:0.5px solid black;">
            <p style="font-size:12px;line-height:12px ">  <strong>  Other arrangement</strong>  </p>
            </td>
        </tr>
        <tr  style="border:0.5px solid black;" >
            <td colspan="2" style="width:111px;border:0.5px solid black;">
            <p style="font-size:12px;line-height:12px ">  <strong>  Business trip</strong>  </p>
            </td>
            <td colspan="2" style="width:457px;border:0.5px solid black;">
            <p style="font-size:12px;line-height:12px ">  </p>
            </td>
        </tr>
        <tr  style="border:0.5px solid black;" >
            <td colspan="2" style="width:111px;border:0.5px solid black;">
            <p style="font-size:12px;line-height:12px ">  <strong>  Other cost(Meal)</strong>  </p>
            </td>
            <td colspan="2" style="width:457px;border:0.5px solid black;">
            <p style="font-size:12px;line-height:12px ">  </p>
            </td>
        </tr>
        <tr  style="border:1px solid black;" >
            <td colspan="4" style="width:568px;border:0.5px solid black;">
            <p style="font-size:12px;line-height:12px ">  <strong>  Agree on the terms above</strong>  </p>
            </td>
        </tr>
        <tr  style="border:0.5px solid black;" >
            <td colspan="3" style="width:284px;border:0.5px solid black;">
            <p style="font-size:12px;line-height:12px ">  <strong>  Service provider sign here</strong>  : <span t-field="doc.registration_id.partner_id.name"/>   </p>
            </td>
            <td style="width:284px;border:0.5px solid black;">
            <p style="font-size:12px;line-height:12px ">  Signature:</p>

            <p style="font-size:12px;line-height:12px ">  Name:________________________Date:____________________   </p>
            </td>
        </tr>
        <tr  style="border:0.5px solid black;" >
            <td colspan="3" style="width:284px;border:0.5px solid black;">
            <p style="font-size:12px;line-height:12px ">  <strong>  AbbVie Sign here</strong>  : <span t-field="doc.event_id.user_id"/>  </p>
            </td>
            <td style="width:284px;border:0.5px solid black;">
            <p style="font-size:12px;line-height:12px ">  Signature:</p>

            <p style="font-size:12px;line-height:12px ">  Name:________________________Date:____________________   </p>
            </td>
        </tr>
        <tr height="0" style="border:0.5px solid black;" >
            <td style="border:0.5px solid black;">  </td>
            <td style="border:0.5px solid black;">  </td>
            <td style="border:0.5px solid black;">  </td>
            <td style="border:0.5px solid black;">  </td>
        </tr>
    </tbody>
</table>

<p style="font-size:12px;line-height:12px ">  </p>


            <div class="oe_structure"/>
        </div>
    </t>
</template>


<template id="report_service_contract">
    <t t-call="report.html_container">
        <t t-foreach="docs" t-as="doc">
            <t t-call="event_profile.report_service_contract_document" t-lang="doc.registration_id.partner_id.lang"/>
        </t>
    </t>
</template>

</data>
