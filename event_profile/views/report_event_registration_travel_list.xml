<?xml version="1.0" encoding="utf-8"?>

<openerp>
<data>
<template id="report_registration_travel_document">

        <t t-call="report.internal_layout">
        <t t-set="doc" t-value="doc.with_context({'lang':doc.lang})" />
        <div class="page">
            <div class="oe_structure"/>
                <h3>Travel Report</h3>
                <row>
                    <div t-if="doc.name" class="col-xs-6">
                        <strong>Subject:</strong>
                        <span t-field="doc.name"/>
                    </div>
                    <div t-if="doc.venue" class="col-xs-3">
                        <strong>Venue:</strong>
                        <span t-field="doc.venue"/>
                    </div>
                </row>
                <row>
                    <div t-if="doc.date_begin" class="col-xs-6">
                        <strong>Start Date:</strong>
                        <span t-field="doc.date_begin"  t-field-options='{"format": "yyyy/MM/dd HH:mm"}' />
                    </div>
                </row>

            <br/>

            <table class="table table-condensed" style="border: 1.5px solid black;">
                <thead>
                    <tr style="border: 0.5px solid black;">
                        <th>#</th>
                        <th class="text-left" style="border: 0.5px solid black;">Region</th>
                        <th class="text-left" style="border: 0.5px solid black;">City</th>
                        <th class="text-left" style="border: 0.5px solid black;">Name</th>
                        <th class="text-left" style="border: 0.5px solid black;">Gender</th>
                        <th class="text-left" style="border: 0.5px solid black;">Hospital</th>
                        <th class="text-left" style="border: 0.5px solid black;">Position</th>
                        <th class="text-left" style="border: 0.5px solid black;">Mobile</th>
                        <th class="text-left" style="border: 0.5px solid black;">Idenfifier ID</th>
                        <th class="text-left" style="border: 0.5px solid black;">Arrival Departure</th>
                        <th class="text-left" style="border: 0.5px solid black;">Arrival Destinatio</th>
                        <th class="text-left" style="border: 0.5px solid black;">Arrival Date</th>
                        <th class="text-left" style="border: 0.5px solid black;">Arrival Method</th>
                        <th class="text-left" style="border: 0.5px solid black;">Arrival Flight/Trian No.</th>
                        <th class="text-left" style="border: 0.5px solid black;">Arrival Journey Time</th>
                        <th class="text-left" style="border: 0.5px solid black;">Return Departure</th>
                        <th class="text-left" style="border: 0.5px solid black;">Return Destinatio</th>
                        <th class="text-left" style="border: 0.5px solid black;">Return Date</th>
                        <th class="text-left" style="border: 0.5px solid black;">Return Method</th>
                        <th class="text-left" style="border: 0.5px solid black;">Return Flight/Trian No.</th>
                        <th class="text-left" style="border: 0.5px solid black;">Return Journey Time</th>
                        <th class="text-left" style="border: 0.5px solid black;">Reponsible</th>
                        <th class="text-left" style="border: 0.5px solid black;">Reponsible Mobile</th>
                        <th class="text-left" style="border: 0.5px solid black;">Room Type</th>
                        <th class="text-left" style="border: 0.5px solid black;">CheckIn Date</th>
                        <th class="text-left" style="border: 0.5px solid black;">Reserved Days</th>
                        <th class="text-left" style="border: 0.5px solid black;">Comments</th>
                    </tr>
               </thead>
               <tbody >
                    <t t-foreach="doc.travel" t-as="l" >
                        <tr style="border: 0.5px solid black;">
                            <td style="border: 0.5px solid black;"  >
                               <t t-esc='l_index + 1' />
                            </td>
                            <td style="border: 0.5px solid black;"  >
                               <span t-field="l.partner.team_id"/>
                            </td>
                            <td style="border: 0.5px solid black;"  >
                               <span t-field="l.partner.city"/>
                            </td>
                            <td style="border: 0.5px solid black;"  >
                               <span t-field="l.partner.name"/>
                            </td>
                            <td style="border: 0.5px solid black;"  >
                               <span t-field="l.partner.gender"/>
                            </td>
                            <td style="border: 0.5px solid black;"  >
                               <span t-field="l.partner.parent_id.name"/>
                            </td>
                            <td style="border: 0.5px solid black;"  >
                               <span t-field="l.partner.function"/>
                            </td>
                            <td style="border: 0.5px solid black;"  >
                               <span t-feld="l.partner.mobile"/>
                            </td>
                            <td style="border: 0.5px solid black;"  >
                               <span t-field="l.registration.identifier_id"/>
                            </td>
                            <td style="border: 0.5px solid black;"  >
                               <span t-field="l.arrival_departure"  />
                            </td>
                            <td style="border: 0.5px solid black;"  >
                               <span t-field="l.arrival_destionation"/>
                            </td>
                            <td style="border: 0.5px solid black;"  >
                               <span t-field="l.arrival_date"/>
                            </td>
                            <td style="border: 0.5px solid black;"  >
                               <span t-field="l.arrival_method"/>
                            </td>
                            <td style="border: 0.5px solid black;"  >
                               <span t-field="l.arrival_freight"/>
                            </td>

                            <td style="border: 0.5px solid black;"  >
                               <span t-field="l.arrival_freight_timeslot"/>
                            </td>

                            <td style="border: 0.5px solid black;"  >
                               <span t-field="l.return_departure"  />
                            </td>
                            <td style="border: 0.5px solid black;"  >
                               <span t-field="l.return_destionation"/>
                            </td>
                            <td style="border: 0.5px solid black;"  >
                               <span t-field="l.return_date"/>
                            </td>
                            <td style="border: 0.5px solid black;"  >
                               <span t-field="l.return_method"/>
                            </td>
                            <td style="border: 0.5px solid black;"  >
                               <span t-field="l.return_freight"/>
                            </td>
                            <td style="border: 0.5px solid black;"  >
                               <span t-field="l.return_freight_timeslot"/>
                            </td>

                            <td style="border: 0.5px solid black;"  >
                               <span t-field="l.registration.user_id.partner_id.name"/>
                            </td>
                            <td style="border: 0.5px solid black;"  >
                               <span t-field="l.registration.user_id.partner_id.mobile"/>
                            </td>

                            <td style="border: 0.5px solid black;"  >
                               <span t-field="l.hotel_room_type"/>
                            </td>
                            <td style="border: 0.5px solid black;"  >
                               <span t-field="l.hotel_reservation_date"/>
                            </td>
                            <td style="border: 0.5px solid black;"  >
                               <span t-field="l.reversed_days"/>
                            </td>

                            <td style="border: 0.5px solid black;"  >
                            </td>
                        </tr>
                    </t>
                </tbody>
            </table>
            <div class="oe_structure"/>
        </div>
    </t>
</template>


<template id="report_registration_travel">
    <t t-call="report.html_container">
        <t t-foreach="docs" t-as="doc">
            <t t-call="event_profile.report_registration_travel_document" t-lang="doc.lang"/>
        </t>
    </t>
</template>

</data>
</openerp>
