<?xml version="1.0" encoding="utf-8"?>
<openerp>

    <data noupdate="0">

        <record id="group_event_user" model="res.groups">
            <field name="name">EMS User</field>
            <field name="category_id" ref="res_roles.module_category_user_roles"/>
            <field name="implied_ids"
                   eval="[(4, ref('base.group_user')),(4, ref('base.group_partner_manager')),(4, ref('event.group_event_user'))]"/>
        </record>

        <record id="group_event_admin" model="res.groups">
            <field name="name">EMS Administrator</field>
            <field name="category_id" ref="res_roles.module_category_user_roles"/>
            <field name="implied_ids"
                   eval="[(4, ref('base.group_user')),(4, ref('base.group_partner_manager')),(4, ref('event.group_event_manager')),(4, ref('base.group_configuration')), (4, ref('base.group_erp_manager')) ]"/>
        </record>

        <record id="partner_ems_admin" model="res.partner">
            <field name="name">EMS Admin</field>
            <field name="company_id" ref="base.main_company"/>
            <field name="customer" eval="False"/>
            <field name="email">ems_admin@yourcompany.example.com</field>
        </record>

        <record id="partner_ems_user" model="res.partner">
            <field name="name">EMS User</field>
            <field name="company_id" ref="base.main_company"/>
            <field name="customer" eval="False"/>
            <field name="email">ems_user@yourcompany.example.com</field>
        </record>

        <record id="user_event_admin" model="res.users">
            <field name="partner_id" ref="partner_ems_admin"/>
            <field name="login">ems_admin</field>
            <field name="password">admin</field>
            <field name="signature">--
EMS Admin</field>
            <field name="company_id" ref="base.main_company"/>
            <field name="groups_id" eval="[(6,0,[ref('group_event_admin')])]"/>
        </record>

        <record id="user_event_user" model="res.users">
            <field name="partner_id" ref="partner_ems_user"/>
            <field name="login">ems_user</field>
            <field name="password">user</field>
            <field name="signature">--
EMS User</field>
            <field name="company_id" ref="base.main_company"/>
            <field name="groups_id" eval="[(6,0,[ref('group_event_user')])]"/>
        </record>

        <record id="base.user_root" model="res.users">
            <field name="groups_id" eval="[(4,ref('base.group_system'))]"/>
        </record>

    </data>
</openerp>
